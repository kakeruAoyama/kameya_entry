<div class="list-group mt-3">
  <%- if controller_name != 'sessions' %>
    <%= link_to "ログイン", new_session_path(resource_name), class:"list-group-item list-group-item-action" %>
  <% end %>
  
  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "新規登録", new_registration_path(resource_name), class:"list-group-item list-group-item-action" %>
  <% end %>
  
  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "パスワードをお忘れですか？", new_password_path(resource_name), class:"list-group-item list-group-item-action" %>
  <% end %>
  
  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to "確認のメールが届いていませんか？", new_confirmation_path(resource_name), class:"list-group-item list-group-item-action" %>
  <% end %>
  
  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= link_to "#{OmniAuth::Utils.camelize(provider)}でログイン", omniauth_authorize_path(resource_name, provider), method: :post, class:"list-group-item list-group-item-action" %><br />
    <% end %>
  <% end %>
</div>
