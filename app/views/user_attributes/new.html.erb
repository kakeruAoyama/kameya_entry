<h1>UserAttributes#new</h1>
<p>Find me in app/views/user_attributes/new.html.erb</p>

<%= form_with model: @user_attribute, url: {controller: 'user_attributes', action: 'create' } do |f| %>
  <div class="field">
    <%= f.label :name, "名前" %>
    <%= f.text_field :name %>
  </div>
  
  <div class="field">
    <%= f.label :university, "大学名" %>
    <%= f.text_field :university %>
  </div>
  
  <div class="field">
    <%= f.label :department, "学部/学科" %>
    <%= f.text_field :department %>
  </div>
  
  <div class="field">
    <%= f.label :barthday, "生年月日" %>
    <%= f.date_field :barthday, value: "2000-01-01" %>
  </div>
  
  <div class="field">
    <%= f.label :graduation_year, "卒業年度" %>
    <%= f.text_field :graduation_year %>
  </div>
  
  <div class="field">
    <%= f.label :number, "電話番号" %>
    <%= f.text_field :number %>
  </div>
  
  <div class="field">
    <%= f.label :sex, "性別" %>
    <%= f.text_field :sex %>
  </div>
  
  <%= f.submit "登録する", disable_with: '登録中...' %>
<% end %>

